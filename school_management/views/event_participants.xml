<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record model="ir.ui.view" id="event_participants_tree_view">
        <field name="name">evevnt.participants.tree.view</field>
        <field name="model">participants.info</field>
        <field name="arch" type="xml">
            <tree>
              <field name='name'/>
              <field name="events"/>
            </tree>
        </field>
  </record>

  <record model="ir.ui.view" id="event_participants_form_view">
        <field name="name">evevnt.participants.form.view</field>
        <field name="model">participants.info</field>
        <field name="arch" type="xml">
          <form>
          	<sheet>
                <group>
                    <group>
                        <field name='name'/>
                        <field name="events"/>
                    </group>
                </group>
          	</sheet>
          </form>
        </field>  
  </record>

  <record model="ir.ui.view" id="participants_search_view">
    <field name="name">participants.search.view</field>
    <field name="model">participants.info</field>
    <field name="arch" type="xml">
      <search string="Search Teacher">
        <field name="name"/>
        <field name="events"/>
      </search>
    </field>
  </record>        

  <record id="participants_info_view" model="ir.actions.act_window">
      <field name="name">Participants</field>
      <field name="res_model">participants.info</field>
      <field name="view_mode">tree,form</field>
      <!-- <field name="domain">[('name', 'in',[name])]</field> -->
          

  </record>

  <!-- <menuitem id="school_root" name="School"/> -->
  <!-- <menuitem id="teacher_nav" name="Teacher" parent="school_root" action="teacher_info_view"/> -->

</odoo>
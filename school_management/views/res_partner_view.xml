<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_partner_newpage" model="ir.ui.view">
      <field name="name">res.partner.newpage</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
          <div name="button_box" position="inside">
            <button string="purchase" class="oe_stat_button" type="object" name="Smart_button_click" icon="fa-car">
                <!-- <field string="Vehicle" name="vehicle_count" widget="statinfo"/> -->
            </button>
          </div>
          <notebook position='inside'>
            <page string='school' name='School'>
              <group>
                <field name='school_name'/>
              </group>
            </page>
          </notebook>
      </field>
  </record>

</odoo>  